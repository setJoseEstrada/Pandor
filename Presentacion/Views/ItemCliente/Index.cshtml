
@model IEnumerable<Datos.Models.ItemCliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>
   Nombre del Usuario:  @ViewBag.NombreGuardado
</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card d-flex align-items-stretch">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Imagen)" class="card-img-top" alt="Imagen">
                <div class="card-body">
                    <h5 class="card-title">@item.Nombre</h5>
                    <p class="card-text">Serie: @item.Serie</p>
                    <p class="card-text">Material: @item.Material</p>
                    <p class="card-text">Clase: @item.Clase</p>
                </div>
            </div>
        </div>
    }
</div>


@Html.ActionLink("Agregar Imagen", "ConsultarImg")

